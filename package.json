{
  "name": "@forevolve/bootstrap-dark",
  "description": "A Bootstrap 4 Dark theme.",
  "version": "1.0.0-alpha.0",
  "prettier": "@forevolve/prettier-config",
  "scripts": {
    "gulp-watch": "gulp watch",
    "browser-sync": "browser-sync start --server --files \"dist/css/*.css\"",
    "browser-sync-proxy": "browser-sync start --proxy \"http://localhost:5000/\" --files \"app/wwwroot/css/*.css\"",
    "watch": "npm-run-all --parallel gulp-watch browser-sync-proxy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForEvolve/bootstrap-dark.git"
  },
  "publishConfig": {
    "registry": "https://www.myget.org/F/forevolve/npm/"
  },
  "keywords": [
    "bootstrap",
    "themes",
    "dark-theme"
  ],
  "author": "Carl-Hugo Marcotte",
  "contributors": [
    {
      "name": "Maciej Kr√ºger",
      "email": "mkg20001@gmail.com",
      "url": "https://mkg20001.io"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.0"
  },
  "files": [
    "scss/**/*.scss",
    "dist/**/*",
    "assets/**/*"
  ],
  "devDependencies": {
    "@forevolve/prettier-config": "^2.0.1",
    "autoprefixer": "^8.6.5",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-cli": "^2.0.1",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-scss-lint": "^1.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "npm-run-all": "^4.1.5",
    "npm-version": "^1.1.0"
  }
}
